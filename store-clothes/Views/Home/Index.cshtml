@model IEnumerable<store_clothes.Models.Category>

<h2>Danh mục sản phẩm</h2>
<div class="row">
    @foreach (var category in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@category.Name</h5>
                    <p class="card-text">@category.Description</p>
                </div>
            </div>
        </div>
    }
</div>
